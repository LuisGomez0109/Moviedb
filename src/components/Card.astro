---
interface Props {
	title: string;
	release: string;
	image: string;
	vote: number;
}

const { title, release, image, vote } = Astro.props;
const url = '../public/peliculas'

---

<div class="card bg-zinc-700 w-100 shadow-xl text-white">
	<figure>
	  <img
	  class="p-2 rounded-2xl"
		src={url + image}
		alt="" />
	</figure>
	<div class="card-body">
	  <h2 class="card-title">{title}</h2>
	  <p>Fecha de lanzamiento: {release}</p>
	  <p>Valoraci√≥n: <span class="rounded-lg p-1 font-bold" id="valor">{vote}</span></p> 
	  <div class="card-actions justify-end">
		<button type="button" class="btn btn-primary hover:bg-white hover:text-black">Ver Detalles</button>
	  </div>
	  
  </div>
  
  <script>
	let element = document.getElementById('valor');
	if (element => 7) {
	  element.classList.add('bg-green-500');
	} else {
	  element.classList.add('bg-red-500'); 
	} 
  </script>


